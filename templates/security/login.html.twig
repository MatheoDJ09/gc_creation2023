{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}
<form class="table text-center text-white col col-md-7 " method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 bg-dark text-white ">
            Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    {# CONNECTEZ - VOUS  E MAIL  PASSWORD #}
    <div class="container-fluid col col-md-3" >
    <h1 class="text-white h1 mb-3 mt-5 font-weight-normal text-center ms-auto">Connectez-Vous</h1>
    <div class="h3 text-center container-fluid">
    <label class="mt-3 font-weight-normal " for="inputEmail">Email</label>
    </div>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <div class="text-center">
    <label class="h3 mb-3 mt-3 font-weight-normal  " for="inputPassword">Mot de Passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="text-center">
    <button class="btn btn-outline-warning btn-lg mt-4" data-feather="arrow-right" type="submit">Se Connecter </button>
</div>
<div class="mt-4">
<a href="{{ path('app_register')}}" > Pas de compte? Créez-en un!</a>
</div>
    </div>
</form>
{% endblock %}

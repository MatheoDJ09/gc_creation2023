{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %} {#  MES INFOS ET MES FAVORIS #} 
    <ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
        <li class="nav-item text-white mt-3 fw-bolder" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" 
            data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" 
            aria-selected="true">Mes Infos</button>
        </li>
        <li class="nav-item text-white mt-3 fw-bolder" role="presentation">
            <button class="nav-link " id="profile-tab" data-bs-toggle="tab" 
            data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" 
            aria-selected="false">Mes Favoris</button>
        </li>
    </ul>

    <div class="tab-content text-white dark bg-dark mb-3" id="myTabContent">
    {# pane 1 #}
    <div class="tab-pane fade text white show active" id="home-tab-pane" role="tabpanel" 
    aria-labelledby="home-tab" tabindex="0">
    <div class="border-start border-end border-bottom p-3">
    {{ form_start(form) }}
    </div>
        {# GROUPE sexe #}
    <div class="row row-cols-2 ms-5  col-12 col-md-4">
    {{ form_row(form.sexe)}} 
    </div>
        {#  NOM - PRENOM  #}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.name)}}
    {{ form_row(form.firstname)}}
    </div>
        {# ADRESSE - COMPLEMENT #}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.address)}}
    {{ form_row(form.address2)}}
    </div>
    {# VILLE - CODE POSTAL #}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.city)}}
    {{ form_row(form.zipCode)}}
    </div>
    {# PAYS - NUMERO DE TELEPHONE #}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.country)}}
    {{ form_row(form.phoneNumber)}}
    </div>
    {# Email et avatar#}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.avatar)}}
    {{ form_row(form.email)}}
    </div>
    {# Mot de passe #}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.plainPassword)}}
    </div>
    {# isVerified #}
    <div class="row row-cols-2 ms-5 col-12 col-md-10">
    {{ form_row(form.isVerified)}}
    </div>
    {# Button save#}
    <div class="row row-cols-2 ms-5 col-12 col-md-10 text-center">
    {{ form_row(form.save) }}
</div>

    {{ form_end(form) }}
    </div>


    {# pane 2 #}
    <div class="tab-pane fade " id="profile-tab-pane" role="tabpanel" 
    aria-labelledby="profile-tab" tabindex="0">...</div>

    </div>
{% endblock %}


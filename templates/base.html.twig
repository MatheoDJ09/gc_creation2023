<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
            {% endblock %}
        </title>
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">  {# FAVICON  #}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/styles.min.css')}}">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_front_home')}}" >
                <img style="p-20px -30px;" src="images/logo.png" alt="logo" class="pull-left">
                    </a>

                    {# MENU NAV BAR #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <container class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto px-3"> 
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" 
                            href="{{ path('app_front_home')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_front_bague')}}">Bagues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_front_bracelet')}}">
                                Bracelets </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_front_collier')}}">
                                Colliers
                                
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Pochettes
                                
                            </a>
                        </li>
{#                         <li class="nav-item">
                            <a class="nav-link" href="#">
                                Boucles d'oreilles
                                
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Lunettes
                                
                            </a>
                        </li> #}
                    </ul>
                
                    {# BIENVENUE - ADMIN - DÉCONNEXION - CONNEXION #}
                    <li class="nav-item ms-auto">
                    {% if is_granted("ROLE_USER") %}
                    <div class="d-flex align-items-center">
                        <div class="text-white">Bienvenue {{ app.user.email }}</div>
                        {% if is_granted("ROLE_ADMIN") %}
                        <a class="nav-link me-1" href="#" target="_blank">Admin</a>
                        {% endif %}
                        {# MON COMPTE ET DECONNEXION #}
                    <a class="btn btn-outline-warning me-1" href="{{ path('app_front_profil')}}">Mon Compte</a>
                        <a class="btn btn-outline-danger me-1" href="{{ path('app_logout')}}">Déconnexion</a>
                    </div>
                    {% else %} {# BAR DE RECHERCHE  #}
                    <div class="d-flex align-items-center" >
                    <form class="d-flex">
                    <input class="form-control me-1" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success me-md-2" type="submit">Search</button>
                    </form> {# formulaire inscription/connextion  #}
                    <a class="btn btn-warning me-1" href="{{ path('app_register')}}">Inscription</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_login')}}">Connexion</a>
                    {% endif %}
                    </li> 
                    </div>
                </div>
            </div>
        </nav>
        {# Boucle for pour avoir flash messages  #}
        <main>
                {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}
            {% endblock %}
        </main>
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>

{% extends 'base-backend.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_home_index') }}"class="btn btn-light fw-bold">Retourn Ã  la liste</a>
    <h1 class="bg-dark text-white mt-3">Home</h1>

    <table class="table bg-dark text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ home.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ home.text }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ home.updatedAt ? home.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ home.signature }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center">
    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}"class="btn btn-success"><i 
    class="align-middle" data-feather="edit-2"></i></a>
    {{ include('admin_home/_delete_form.html.twig') }}
    </div>
{% endblock %}
